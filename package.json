{
  "name": "mern-tutorial",
  "version": "1.0.0",
  "description": "Goalsetter app for youtube tutorial",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npm run build:clean:client && npm run build:client:prod",
    "build:server": "npm run build:clean:server && npm run build:server:prod",
    "build:clean:client": "rimraf frontend/build",
    "build:clean:server": "rimraf backend/dist",
    "build:client:prod": "npm run --prefix frontend build",
    "build:server:prod": "npm run --prefix backend build"
  },
  "author": "Brad Traversy",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.9"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}